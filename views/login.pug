extends layout

block content
   
  -data = data || {}

  if errors
    ul.my-errors
      for error in errors
        li= error.msg
        
  
  form(action="/welcome" method="POST" class="form-login")
    h3 #{thankYou}
    label(for="name") Name:
    input(
      type="text"
      id="name"
      name="nameLogin"
      class="form-control"
      value=data.nameLogin
    )

    label(for="password") Password:
    input(
      type="password"
      id="password"
      name="passwordLogin"
      class="form-control"
      value=data.passwordLogin
    )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )